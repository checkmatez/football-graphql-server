{
  "name": "football-graphql-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js --ext js,graphql",
    "lint": "eslint src",
    "format":
      "prettier src/**/*.{js,jsx,json,css} --config ./.prettierrc --write"
  },
  "dependencies": {
    "graphql-iso-date": "^3.5.0",
    "graphql-yoga": "^1.3.3",
    "node-fetch": "^2.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.15.1",
    "prettier": "^1.10.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "*.{js,jsx,json,css}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  }
}
