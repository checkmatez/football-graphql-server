{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "plugins": ["jest", "import"],
  "rules": {
    "no-unused-vars": 1,
    "no-console": 0,
    "prefer-destructuring": 1
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "global-require": 0
      }
    }
  ]
}
